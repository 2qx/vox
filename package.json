{
  "name": "vox-meta",
  "private": "true",
  "description": "A collection of tools & libraries for decentralized finance.",
  "scripts": {
    "app:build": "pnpm --filter app run build",
    "app:dev": "pnpm --filter app run dev",
    "build": "pnpm -r run build",
    "regtest:up": "./harness/docker/start.sh",
    "regtest:down": "./harness/docker/stop.sh",
    "test": "ava --config ./config/ava.config.js",
    "test:c8": "c8 ava --config ./config/ava.config.js",
    "typedoc": "pnpm -r run typedoc"
  },
  "devDependencies": {
    "@ava/typescript": "^5.0.0",
    "@bitauth/libauth": "^3.0.0",
    "@types/node": "20.14.10",
    "@types/sharedworker": "0.0.164",
    "ava": "6.2.0",
    "c8": "10.1.3",
    "electrum-cash": "2.0.10",
    "mainnet-js": "2.7.10",
    "typedoc": "^0.28.1",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=20.18.0",
    "pnpm": "10.6.3"
  },
  "packageManager": "pnpm@10.6.3",
  "type": "module",
  "c8": {
    "exclude": [
      "**/tests/*.js"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ],
    "patchedDependencies": {
      "@electrum-cash/network": "patches/@electrum-cash__network.patch",
      "mainnet-js": "patches/mainnet-js.patch"
    }
  }
}