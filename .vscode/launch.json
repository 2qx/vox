    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "runtimeVersion": "23.6.1",
            "request": "launch",
            "name": "Debug AVA test file",
            "program": "${workspaceFolder}/node_modules/ava/entrypoints/cli.mjs",
            "args": [
                "--serial",
                "${file}"
            ],
            "outputCapture": "std",
            "console": "integratedTerminal",
            "runtimeExecutable": "${env:HOME}/.nvm/versions/node/v23.6.1/bin/node",
            "skipFiles": [
                "<node_internals>/**/*.js"
            ]
        }
    ]
}