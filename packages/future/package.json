{
  "name": "@fbch/lib",
  "version": "1.0.0",
  "description": "A library for Future Bitcoin Cash (FBCH) contracts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./out/index.d.ts",
      "import": "./out/index.js"
    },
    "./*.js": {
      "types": "./out/*.d.ts",
      "import": "./out/*.js"
    },
    "./*.json": "./out/*.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/2qx/unspent.git",
    "directory": "packages/future"
  },
  "keywords": [
    "BCH",
    "defi"
  ],
  "author": "2qx",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/2qx/unspent/issues"
  },
  "homepage": "https://github.com/2qx/unspent#readme",
  "scripts": {
    "prepare": "pnpm run build",
    "build": "tsc -p tsconfig.json",
    "typedoc": "typedoc src/index.ts --out out/docs --options ../../config/typedoc.json"
  },
  "dependencies": {
    "@unspent/tau": "workspace:*",
    "@bitauth/libauth": "^3.0.0"
  }
}
